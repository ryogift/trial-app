<% if notice.present? %>
  <p id="notice" class="mt-2 alert alert-success" role="alert"><%= notice %></p>
<% end %>

<h1 class="mt-2">Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td  scope="row"><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to "Show", post, class: "btn btn-primary" %></td>
        <td><%= link_to "Edit", edit_post_path(post), class: "btn btn-success" %></td>
        <td><%= link_to "Destroy", post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Post", new_post_path, class: "btn btn-success float-end" %>
