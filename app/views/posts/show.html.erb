<% if notice.present? %>
  <p id="notice" class="mt-2 alert alert-success" role="alert"><%= notice %></p>
<% end %>

<p class="mt-5">
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p class="mb-5">
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to "Edit", edit_post_path(@post), class: "btn btn-success me-2" %> |
<%= link_to "Back", posts_path, class: "btn btn-primary ms-2" %>
